<!doctype html>
<html lang="en">
  <head>
    {% render "head", metadata: site.metadata, title: page.title %}
  </head>
  <body class="{{ page.layout }} {{ page.page_class }}">
    {% comment %}{% render "navbar", metadata: site.metadata, page: page %}{% endcomment %}

    <main class="px-5 lg:px-0">
      {{ content }}
    </main>

    {% render "footer", metadata: site.metadata %}
  </body>
</html>
